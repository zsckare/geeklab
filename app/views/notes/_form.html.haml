= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .row
    .input-field
      = f.label :folio, "Folio"
      = f.text_field :folio
  .row
    .input-field
      = f.label :client_id, "Cliente"
      = f.collection_select :client_id, Client.all, :id, :fullname, include_blank: true
  .row
    .center-align
      = f.submit 'Crear', class: 'btn blue'
